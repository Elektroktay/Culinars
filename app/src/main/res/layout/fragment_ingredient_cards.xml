<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="55dp"
    android:layout_height="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/card_ingredient_container"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true">
        <ImageView
            android:id="@+id/card_ingredient_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tomato"/>
        <android.support.v7.widget.CardView
            android:id="@+id/card_ingredient_text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/colorAccent75p"
            app:cardCornerRadius="7sp"
            app:cardElevation="2dp">
            <TextView
                android:id="@+id/card_ingredient_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="3dp"
                android:paddingLeft="3dp"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Tomatoes"
                android:textSize="9sp"
                android:textAlignment="center"/>
        </android.support.v7.widget.CardView>
    </android.support.v7.widget.CardView>
</FrameLayout>