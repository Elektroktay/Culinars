<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:id="@+id/recipe_ingredients_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/recipe_ingredients_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp">
        <TextView
            android:id="@+id/recipe_ingredients_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Tomatoes"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/recipe_ingredients_value_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="150 gr"/>
        <TextView
            android:id="@+id/recipe_ingredients_value_2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="end"
            android:textAlignment="gravity"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:text="$5.00"/>

    </android.support.v7.widget.CardView>
    <ImageView
        android:id="@+id/recipe_ingredients_check"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:src="@drawable/check_white"
        android:layout_gravity="center_vertical|start"/>
</FrameLayout>