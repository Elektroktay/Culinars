<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/recipe_ingredients_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/recipe_ingredients_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="3dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        app:cardUseCompatPadding="true">
        <ImageView
            android:id="@+id/recipe_ingredients_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/tomato"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical|start"/>
        <TextView
            android:id="@+id/recipe_ingredients_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:textColor="@android:color/white"
            android:text="Tomatoes"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"/>
        <TextView
            android:id="@+id/recipe_ingredients_amount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:textColor="@android:color/white"
            android:gravity="end"
            android:textAlignment="gravity"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:text="150 gr"/>
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/recipe_ingredients_checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:buttonTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_gravity="end|center_vertical" />
    </android.support.v7.widget.CardView>

</FrameLayout>