<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/culinars"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        app:cardElevation="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true"
        android:layout_height="256dp">
        <FrameLayout
            android:id="@+id/card_back_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="74dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/card_facts_view"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/card_short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="50dp"
                android:padding="8dp"
                android:textSize="12sp"
                android:text="@string/large_text"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/card_ingredients_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:layout_marginRight="60dp"
                android:layout_marginEnd="60dp"
                android:layout_gravity="bottom|end">

            </android.support.v7.widget.RecyclerView>
        </FrameLayout>
        <!--
            android:translationY="-179dp" -->
        <FrameLayout
            android:id="@+id/card_front_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/card_image_container">
                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/cooking_prep3"/>
                <View
                    android:id="@+id/card_image_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_black"/>
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/star_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/card_rate_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_white_48dp"
                    android:layout_gravity="bottom|end"/>
                <ImageView
                    android:id="@+id/card_rate_2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_toRightOf="@id/card_rate_1"
                    android:layout_toEndOf="@id/card_rate_1"
                    android:src="@drawable/ic_star_white_48dp"
                    android:layout_gravity="bottom|end"/>
                <ImageView
                    android:id="@+id/card_rate_3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_toRightOf="@id/card_rate_2"
                    android:layout_toEndOf="@id/card_rate_2"
                    android:src="@drawable/ic_star_white_48dp"
                    android:layout_gravity="bottom|end"/>
                <ImageView
                    android:id="@+id/card_rate_4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_toRightOf="@id/card_rate_3"
                    android:layout_toEndOf="@id/card_rate_3"
                    android:src="@drawable/ic_star_half_white_48dp"
                    android:layout_gravity="bottom|end"/>
                <ImageView
                    android:id="@+id/card_rate_5"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_toRightOf="@id/card_rate_4"
                    android:layout_toEndOf="@id/card_rate_4"
                    android:src="@drawable/ic_star_border_white_48dp"/>
            </RelativeLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Very Long Recipe Title of DOOM"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"
            android:textColor="@android:color/white"
            android:layout_gravity="top|start"
            android:textSize="28sp"
            android:padding="16dp"/>
        <ImageView
            android:translationY="179dp"
            android:alpha="0"
            android:id="@+id/card_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/heart_outline"
            android:layout_gravity="top|end"
            android:layout_margin="16dp" />
    </android.support.v7.widget.CardView>
</FrameLayout>